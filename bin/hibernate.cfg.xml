<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="hbm2ddl.auto">update</property>
<property name="dialect">org.hibernate.dialect.OracleDialect</property>
<property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
<property name="connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
<property name="connection.username">reddy</property>
<property name="connection.password">reddy</property>
<property name="show_sql">true</property>
<mapping class="com.cubic.HibernateWithAnnotations.Employee"/>
<mapping class="com.cubic.HibernateWithAnnotations.RegularEmployee"/>
<mapping class="com.cubic.HibernateWithAnnotations.ContractEmployee"/>
</session-factory>
</hibernate-configuration>